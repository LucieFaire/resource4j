<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="fileFactory" class="com.github.resource4j.spring.SpringResourceFileFactory" />

	<bean id="resources" class="com.github.resource4j.resources.DefaultResources">
		<property name="fileFactory" ref="fileFactory" />
	</bean>

	<bean class="com.github.resource4j.spring.ResourceValueBeanPostProcessor" />

</beans>
